<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.97">

        <WebView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/webView" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.03">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/inventoryButton"
            android:id="@+id/inventoryButton"
            android:layout_weight="0.33333"
            android:onClick="onInventoryButtonClick"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="#ffdafdff" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/southViewButton"
            android:id="@+id/southViewButton"
            android:layout_weight="0.333333"
            android:onClick="onSouthViewButtonClick"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="#ffe7f2ff" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/northViewButton"
            android:id="@+id/northViewButton"
            android:layout_weight="0.33333"
            android:onClick="onNorthViewButtonClick"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="#fff8f2ff" />
    </LinearLayout>

</LinearLayout>
